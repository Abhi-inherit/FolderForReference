@model IEnumerable<JobPortal.Models.Candidate>

<div class="grid-form">

<!---->
  <div class="grid-form1">
  <div class="panel-body">
      <div  class="form-horizontal">
		  <div class="form-group mb-n">
              <label class="col-md-2 control-label">Name</label>
              <div class="col-md-8"><input type="text" class="form-control1" value="" id="txt_JobName"/></div>
		  </div>
          <div class="form-group mb-n">
              <label class="col-md-2 control-label">Skills</label>
              <div class="col-md-8"><input type="text" class="form-control1" value="" id="txt_Skills"/></div>
		  </div>
          <div class="form-group mb-n">
              <label class="col-md-2 control-label">Category</label>
              <div class="col-md-8">@Html.DropDownList("Sel_Category",ViewBag.Category as List<SelectListItem>,new{@class="form-control1"})</div>
		  </div>
          <div class="form-group mb-n">
              <label class="col-md-2 control-label">Location</label>
              <div class="col-md-8">@Html.DropDownList("Sel_Location",ViewBag.Location as List<SelectListItem>,new{@class="form-control1"})</div>
		  </div>
          <div class="form-group mb-n">
              <label class="col-md-2 control-label">Experience</label>
              <div class="col-md-8">@Html.DropDownList("Sel_Experience",ViewBag.Experience as List<SelectListItem>,new{@class="form-control1"})</div>
		  </div>
	  </div>
	</div>

      <div class="panel-footer">
		<div class="row">
			<div class="col-sm-8 col-sm-offset-2">
                <input type="button" value="Search" class="btn-primary btn"  onclick ="SearchCandidate()" />
			</div>
		</div>
	 </div>
 
  </div>
         <div class="grid-form1">
             <table id="CandidateTable" class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>
            Name
        </th>
        <th>
            Email Id
        </th>
        <th>
            Mobile Number
        </th>
        <th>
            Qualification
        </th>
        <th>
            Skill Description
        </th>
      <th></th>
    </tr>
  </thead>
    <tbody>
@foreach (var item in Model) 
{
    <tr> 
        <td>
            @Html.DisplayFor(modelItem => item.Cand_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cand_EmailId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cand_MobileNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cand_HighestQualification)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cand_SkillDescription)
        </td>
        
        <td>
            <input type="button" value="Details" class="btn btn-xs btn-info" onclick="Get_A_CandidateDetails(@item.Cand_Id)" />
            <input type="button" value="Delete" class="btn btn-xs btn-info" onclick="GetCandidateDeleteView(@item.Cand_Id)" />
        </td>
    </tr>
}
</tbody>
</table>
         </div> 
 	</div>


