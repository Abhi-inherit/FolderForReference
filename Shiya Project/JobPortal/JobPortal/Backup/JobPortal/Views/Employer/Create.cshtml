@model JobPortal.Models.Jobs

<script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("SaveJob","Employer")) {
    @Html.ValidationSummary(true)
    <table>
        <tr>
        <td>
            @Html.LabelFor(model => model.Job_Title)
        </td>
        <td class="editor-field">
            @Html.EditorFor(model => model.Job_Title)
            @Html.ValidationMessageFor(model => model.Job_Title)
        </td>
</tr><tr>
        <td>
            @Html.LabelFor(model => model.Job_Designation)
        </td>
        <td>
            @Html.EditorFor(model => model.Job_Designation)
            @Html.ValidationMessageFor(model => model.Job_Designation)
        </td>
        </tr><tr>
        <td>
            @Html.LabelFor(model => model.Job_Description)
        </td>
        <td>
            @Html.EditorFor(model => model.Job_Description)
            @Html.ValidationMessageFor(model => model.Job_Description)
        </td>
    </tr><tr>
        <td>
            @Html.LabelFor(model => model.Job_CategoryId)
        </td>
        <td>
            @Html.DropDownList("Job_CategoryId",ViewBag.Category as List<SelectListItem>,new{@class="form-control1"})
            @Html.ValidationMessageFor(model => model.Job_CategoryId)
        </td>
    </tr><tr>
        <td>
            @Html.LabelFor(model => model.Job_LocationId)
        </td>
        <td>
            @Html.DropDownList("Job_LocationId",ViewBag.Location as List<SelectListItem>,new{@class="form-control1"})
            @Html.ValidationMessageFor(model => model.Job_LocationId)
        </td>
    </tr><tr>

        <td>
            @Html.LabelFor(model => model.Job_ExpLevelId)
        </td>
        <td>
            @Html.DropDownList("Job_ExpLevelId",ViewBag.Experience as List<SelectListItem>,new{@class="form-control1"})
            @Html.ValidationMessageFor(model => model.Job_ExpLevelId)
        </td>
    </tr>
        <tr><td>
            <input type="submit" value="Save" class="btn btn-default"/></td>
            <td>@Html.HiddenFor(model=>model.Job_Id)</td>
        </tr>
    </table>
}

