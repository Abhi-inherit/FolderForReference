@model IEnumerable<JobPortal.Models.Employer>

<div class="grid-form">

<!---->
  <div class="grid-form1">
  <div class="panel-body">
      <div  class="form-horizontal">
		  <div class="form-group mb-n">
              <label class="col-md-2 control-label">Company Name</label>
              <div class="col-md-8"><input type="text" class="form-control1" value="" id="txt_CompanyName"/></div>
		  </div>
          <div class="form-group mb-n">
              <label class="col-md-2 control-label">Contact Person</label>
              <div class="col-md-8"><input type="text" class="form-control1" value="" id="txt_Contact"/></div>
		  </div>
          <div class="form-group mb-n">
              <label class="col-md-2 control-label">Status</label>
              <div class="col-md-8">
                  <select id="Sel_Status">
                      <option value="True">True</option>
                      <option value="False">False</option>
                </select>
              </div>
		  </div>
          
	  </div>
	</div>

      <div class="panel-footer">
		<div class="row">
			<div class="col-sm-8 col-sm-offset-2">
                <input type="button" value="Search" class="btn-primary btn"  onclick ="SearchEmployer()" />
			</div>
		</div>
	 </div>
 
  </div>
         <div class="grid-form1">
<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>
           Company Name
        </th>
        <th>
            Contact Person
        </th>
        <th>
            Email Id
        </th>
        <th>
            Mobile
        </th>
        <th>
            Place
        </th>
       
        <th>
            Status
        </th>
        <th></th>
    </tr>
        </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
      
        <td>
            @Html.DisplayFor(modelItem => item.Emp_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Emp_ContactPersonName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Emp_EmailId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Emp_MobileNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Emp_Place)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Emp_Status)
        </td>
        <td>
            <input type="button" value="Details" class="btn btn-xs btn-info" onclick="Get_AnEmployerDetails(@item.Emp_Id)" />
            <input type="button" value="Edit Status" class="btn btn-xs btn-info" data-toggle="modal" data-target="#myModal" onclick="EditEmployerStatus(@item.Emp_Id)" />
            <input type="button" value="Delete" class="btn btn-xs btn-info" onclick="GetEmployerDeleteView(@item.Emp_Id)" />
        </td>
    </tr>
}
</tbody>
</table>
</div>
    </div> 

<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Modal Header</h4>
      </div>
      <div class="modal-body" id="modal-body">
        <p>Some text in the modal.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>